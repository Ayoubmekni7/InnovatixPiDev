{% extends 'base.html.twig' %}
{% block nompage %}Liste des réclamations{% endblock %}

{% block body %}
<div class="content-body">
            <div class="container-fluid">

                <!-- row -->                           

               <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm mb-0 table-striped">
                                       <thead>
                                       <tr>
                                            <th ><strong>Id</strong></th>
                                            <th ><strong>Nom</strong></th>
                                            <th ><strong>Objet</strong></th>
                                            <th ><strong>Contenu</strong></th>
                                            <th ><strong>Adresse</strong></th>
                                            <th ><strong>Dép concerné </strong></th>
                                            <th ><strong>Statut</strong></th>
                                            <th ><strong>Actions</strong></th>
                                       </tr>
                                        </thead>
                                        <tbody id="customers" >
                                        {% for reclamation in reclamations %}                             
                                         <tr class="btn-reveal-trigger" >
                                            <td class="py-3" >
                                                 <a href="#">
                                                    <div class="media d-flex align-items-center">
                                                        <div class="media-body">
                                                            {{ reclamation.id }}
                                                         </div>
                                                    </div>
                                                 </a>
                                            </td>
                                           <td class="py-2"> {{ reclamation.nomAutRec }}</td>
                                            <td class="py-2"> {{ reclamation.objetRec }}</td>
                                            <td class="py-2">{{ reclamation.contenuRec }}</a></td>
                                            <td class="py-2">{{ reclamation.adrRec }}</td>
                                            <td class="py-2">{{ reclamation.depRec }}</td>
                                            <td class="py-2">{{ reclamation.statutRec }}En cours de traitement</td>
                                            <td class="py-2 ps-5"> 
                                                 <div class="d-flex">
                                                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="bi bi-eye"> </i></a>

                                                  <a href="{{ path('app_reponse_new') }}" class="btn btn-primary shadow btn-xs sharp me-1"> <i class="bi bi-reply"> </i></a>
                                                  <a href="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" class="btn btn-danger shadow btn-xs sharp" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-trash"></i></a>
                                                 </div>
                                           </td>
                                   
                                        </tr>

           
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
