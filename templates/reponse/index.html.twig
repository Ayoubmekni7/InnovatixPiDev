
{% extends 'base.html.twig' %}
{% block nompage %}Réponses{% endblock %}

        {% block body %}
        
<div class="content-body">
            <div class="container-fluid">

                <!-- row -->

               <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-sm mb-0 table-striped">
                                        <thead>
                                            <tr>
                                                <th ><strong>Adresse rép</strong></th>
                                                <th ><strong>Adresse réc</strong></th>
                                                <th ><strong>Date de réponse</strong></th>
                                                <th ><strong>Contenu</strong></th>
                                                <th ><center><strong>Action</strong></center></th>

                                            </tr>
                                        </thead>
                                        <tbody id="customers" >
                                         {% for reponse in reponses %}

                                            <tr class="btn-reveal-trigger" >
                                            
                                                 <td></td>
                                                  <td class="py-2"><a href="mailto:ricky@example.com">{{reponse.adrRep}}</a></td>
                                                  <td class="py-2">{{reponse.dateRep ? reponse.dateRep|date('Y-m-d') : ''}}</td>
                                                 <td class="py-2"> {{reponse.contenuRep}}</td>
                                                <td class="py-2 ps-5"> <div class="d-flex">
                                                        
                                                       <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="bi bi-eye"> </i></a>

                                                        <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-primary shadow btn-xs sharp me-1"><i
                                                                class="fas fa-pencil-alt"></i></a>
                                                        <a href="{{ path('app_reponse_delete', {'id': reponse.id}) }}" class="btn btn-danger shadow btn-xs sharp"><i
                                                                class="fa fa-trash"></i></a>
                                                    </div></td>
                                  

                                            </tr>
                                             {% else %}
                                             <tr>
                                                 <td colspan="8">Pas de réponses sur les réclamations.</td>
                                             </tr>
                                             {% endfor %}
                                    
                                        </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
        
        {% endblock %}

