 {% extends 'baseadmin.html.twig' %}
{% block nompage %}Réclamations{% endblock %}

        {% block body %}
 <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
				
				
				
                <!-- row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="email-left-box px-0 mb-3">
                                    <div class="p-0">
                                        <a href="#" class="btn btn-primary btn-block">Réponse</a>
                                    </div>
                                    <div class="mail-list rounded mt-4">
										<a href="javascript:void()" class="list-group-item"><i class="fa fa-trash font-18 align-middle me-2"></i>Supprimer</a>
                                    </div>
                                    <div class="mail-list rounded overflow-hidden mt-4">
										<div class="intro-title d-flex justify-content-between my-0">
											<h5>Département</h5>
											<i class="fa fa-chevron-down"></i>
										</div>
                                             okkkk
                                    </div>
                                </div>
                                <div class="email-right-box ms-0 ms-sm-4 ms-sm-0">
                                    <div class="toolbar mb-4" role="toolbar">
                                        <div class="btn-group mb-1">
                                            <button type="button" class="btn btn-primary light px-3"><i class="fa fa-archive"></i></button>
                                            <button type="button" class="btn btn-primary light px-3"><i class="fa fa-exclamation-circle"></i></button>
                                            <button type="button" class="btn btn-primary light px-3"><i class="fa fa-trash"></i></button>
                                        </div>
                                        <div class="btn-group mb-1">
                                            <button type="button" class="btn btn-primary light dropdown-toggle px-3" data-bs-toggle="dropdown">
												<i class="fa fa-folder"></i> <b class="caret m-l-5"></b>
                                            </button>
                                            <div class="dropdown-menu"> 
												<a class="dropdown-item" href="javascript: void(0);">Social</a> 
												<a class="dropdown-item" href="javascript: void(0);">Promotions</a> 
												<a class="dropdown-item" href="javascript: void(0);">Updates</a>
                                                <a class="dropdown-item" href="javascript: void(0);">Forums</a>
                                            </div>
                                        </div>
                                        
                                    <div class="compose-content">
                                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                            <div class="mb-3">
                                                 {{ form_label(form.adrRep, 'Adresse répondant :') }}

                                                {{ form_row(form.adrRep, {'attr': {'class': 'form-control bg-transparent'},'id':'adrRep', 'label': false, 'placeholder': 'Envoyer à:'}) }}

                                            </div>
                                                <div class="mb-3">
                                                {{ form_label(form.dateRep, 'Date de la réponse :') }}

                                                {{ form_row(form.dateRep, {'attr': {'class': 'form-control bg-transparent'}, 'id':'dateRep' ,'label': false, 'placeholder': 'Objet'}) }}

                                            </div>
                                            
                                            <div class="mb-3">
                                            {{ form_label(form.contenuRep, 'Contenu de la réponse :') }}

                                              {{ form_row(form.contenuRep, {'attr': {'class': 'textarea_editor form-control bg-transparent'},'id':'contenuRep', 'rows': '15', 'placeholder': 'Entrez votre réponse'}) }}
                                            </div>
                                           <div class="mb-3">
                                                 {{ form_label(form.pieceJRep, 'Pièce jointe :') }}

                                                {{ form_row(form.pieceJRep, {'attr': {'class': 'form-control bg-transparent'}, 'id':'pieceJRep' , 'placeholder': 'piece jointe'}) }}

                                            </div>
                                        

                                    </div>
                                    <div class="text-start mt-4 mb-3">
                                        <button class="btn btn-primary btn-sl-sm me-2" type="submit"><span class="me-2"><i class="fa fa-paper-plane"></i></span>Envoyer</button>
                                    </div>
                                    
                                     {{ form_end(form) }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->
		{% endblock %}

