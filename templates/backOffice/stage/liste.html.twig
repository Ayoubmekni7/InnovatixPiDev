{% extends '../../base.html.twig'  %}
{% block title %} Les stages{% endblock %}
{% block nompage %} Les stages{% endblock %}

{% block body %}


    <div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- Lien pour ajouter un nouveau crédit -->

            </div>
            <!-- row -->
            <div class="row">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Liste des demande</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">

                                <table class="table table-responsive-md">
                                    <thead>
                                    <tr >

                                        <th><strong>ID_Stage</strong></th>
                                        <th><strong>Sujet</strong></th>
{#                                        <th><strong>date début</strong></th>#}
                                        <th><strong>ID stagiaire</strong></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for a in stages %}
                                        <tr>
                                            <td>{{a.id }}</td>
                                            <td>{{ a.sujet }}</td>
{#                                            <td>{{ a.dateDebut | date('d F Y')  }}</td>#}
                                            <td>
                                            {% for item in a.idStagiare %}
                                                {{ item }}
                                            {% endfor %}</td>


                                            <td>
                                                <div class="d-flex">
                                                    <a href="{{ path('modifierStage', {'id':a.id}) }}"> <button class="btn btn-success shadow btn-xs sharp me-1">Approuver</button></a>
                                                   <a href="{{ path('deleteStage', {'id':a.id}) }}" > <button class="btn btn-danger shadow btn-xs sharp">Rejeter</button></a>
                                                </div>
                                            </td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>




{% endblock %}