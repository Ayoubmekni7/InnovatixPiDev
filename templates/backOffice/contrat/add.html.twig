    <style>
        .input1 {
            height: fit-content;
            border-radius: 25px;
            padding: 0 30px;
        }
    </style>


    <div class="content-body">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                                            <!-- Lien pour ajouter un nouveau crédit -->


                                <!-- row -->
                                <div class="row">

                                    <div class="col-lg-12">
                                        <div class="card">
                                                <div class="card-header">
                                                    <h4 class="card-title">{{ titre }}</h4>
                                                </div>
                                            <div class="card-body">
                                                <div class="table-responsive">
                                                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                                                    {{ form_row(form._token) }}
                                                        <form class="form"  >
                                                            <div class="mb-3">
                                                                <label class="form-label" style="margin-top: 10px">  {{ form_label(form.dateDebut, 'Nom', {'label_attr': {'class': 'form-label'}}) }} </label>
                                                                <div > {{ form_widget(form.dateDebut, {'attr': {'class': '', 'placeholder': 'Nom'}}) }}</div>
                                                                {{ form_errors(form.dateDebut, {'attr': {'class': 'valid-feedback'}}) }}
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label" style="margin-top: 10px">  {{ form_label(form.dure, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}</label>
                                                                <div >   {{ form_widget(form.dure, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }} </div>
                                                                {{ form_errors(form.dure, {'attr': {'class': 'valid-feedback'}}) }}
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label" style="margin-top: 10px">  {{ form_label(form.datefin, 'Email', {'label_attr': {'class': 'form-label'}}) }}</label>
                                                                <div>{{ form_widget(form.datefin, {'attr': {'class': '', 'placeholder': 'Email'}}) }}</div>
                                                                {{ form_errors(form.datefin, {'attr': {'class': 'valid-feedback'}}) }}
                                                            </div>
                                                            <div class="mb-3 mt-5">
                                                                <label  class="form-label" > {{ form_label(form.sujet, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}</label>
                                                                <div>{{ form_widget(form.sujet, {'attr': {'class': ' form-control input1', 'placeholder': 'Numéro de téléphone'}}) }}</div>
                                                                {{ form_errors(form.sujet, {'attr': {'class': 'valid-feedback'}}) }}
                                                            </div>
                                                            <div class="mb-3 mt-5">
                                                                <label  class="form-label" > {{ form_label(form.stagiare, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}</label>
                                                                <div>{{ form_widget(form.stagiare, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}</div>
                                                                {{ form_errors(form.stagiare, {'attr': {'class': 'valid-feedback'}}) }}
                                                            </div>
                                                            <button class="btn btn-primary" type="submit">Ajouter</button>                                                        </form>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    </div>
                </div>
            </div>
</div>


{% endblock %}