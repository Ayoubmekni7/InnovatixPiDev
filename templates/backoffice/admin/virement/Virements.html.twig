{% extends '../../../base.html.twig' %}

{% block title %}Hello VirementController!{% endblock %}

{% block body %}
    {% block nompage %}Virements{% endblock %}
    <div class="content-body">
        <div class="container-fluid">

            <!-- row -->

            <div class="row">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Liste des Virements</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-responsive-md">
                                    <thead>
                                    <tr>

                                        <th><strong>N° de Compte</strong></th>
                                        <th><strong>Nom et Prenom</strong></th>
                                        <th><strong>Cin</strong></th>
                                        <th><strong>Type de Virement</strong></th>
                                        <th><strong>Transférez A </strong></th>
                                        <th><strong>Numéro de Bénéficiaire</strong></th>
                                        <th><strong>Montant</strong></th>
                                        <th><strong>Actions</strong></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for i in virements  %}
                                    <tr>

                                        <td><strong>{{ i.numCompte }}</strong></td>
                                        <td>
                                            <div class="d-flex align-items-center"> <span class="w-space-no">{{ i.NometPrenom }}</span></div>
                                        </td>
                                        <td>{{ i.Cin }}</td>
                                        <td>{{ i.TypeVirement }}</td>
                                        <td>{{i.transferezA}}</td>
                                        <td>{{ i.NumBeneficiare }}</td>
                                        <td>
                                            <div class="d-flex align-items-center">{{ i.Montant }}</div>
                                        </td>

                                        <td>
                                            <div class="d-flex">
                                                <a href="#" class="btn btn-primary shadow btn-xs sharp me-1"><i
                                                            class="bi bi-check-lg"></i></a>
                                                <a href="{{ path('deleteVirement',{'id':i.id}) }}" class="btn btn-danger shadow btn-xs sharp"><i
                                                            class="fa fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
