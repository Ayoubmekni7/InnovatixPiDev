{% block body %}
    <body style="background:#7c7b7b;">
    {{ form_start(form) }}
    {{ form_row(form._token) }}
        <div style="position: relative; margin-top: 100px; text-align: center; padding-bottom: 15px;padding-left:200px;padding-right: 730px; color: #fff; text-shadow: 0 5px 10px rgba(0, 0, 0, .2); font-size: 50px; height: auto;">
            <div class="d-flex justify-content-end">
                <form class="form-inline" role="search">
                    <div style="border: 3px #0D0A0A; width: 10em;">
                    {{ form_widget(form.numero, {'attr': {'class': 'form-control me-2', 'placeholder': 'Saisir votre num√©ro pour suivre vos demande'}}) }}
                    </div>
                </form>
            </div>
        </div>
    <div style="position: relative; padding-left: 900px"> <a  href=""> <button class="btn btn-outline-success" type="submit" style="">Search</button></a></div>
{#    {{ path('Recherche', {'id':form.vars.value.numero}) }}#}
    <div style="position: relative; text-align: center; padding-bottom: 15px;padding-right: 420px; color: #fff; text-shadow: 0 5px 10px rgba(0, 0, 0, .2); font-size: 50px; height: auto;">
        <div class="d-flex justify-content-end">
            <form class="form-inline">
                {{ form_widget(form.domaine, {'attr': {'class': 'form-control', 'placeholder': 'domaine'}}) }}
            </form>
        </div>
    </div>

    <div class="container"
         style="
            position: relative; text-align: center;
            padding-bottom: 15px;
            color:#fff;
            text-shadow: 0 5px 10px rgba(0,0,0,.2);
            font-size: 50px; height:auto;" onmouseover="this.style.transform='scale(1.02)'"
            onmouseout="this.style.transform='scale(1)'"
    >

        <div class="box-container" style="display: grid;
            /*grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));*/
            gap:15px;
            flex-direction: column;
            align-items: center; border-radius: 20px;text-align: center;">


            <div class="box" style="margin-top: 10px; -ms-background-position-x: center;box-shadow: 0 5px 10px rgba(0,0,0,.2);
            border-radius: 20px;
            background: #fff;
            text-align: center;
            padding:30px 20px;direction:revert ">

                {% for i in offres %}
                    <div class="box">
                        <img src="{{ asset('image/icon-1.png') }}" alt="" style="height: 80px;">
                        <h3 style=" color:#444;
                                font-size: 22px;
                                padding:10px 0;">{{ i.title }}</h3>
                        <p style="color:#777;
                                    font-size: 15px;
                                    display: -webkit-box;
                                    -webkit-line-clamp: 2;
                                    -webkit-box-orient: vertical;
                                    overflow: hidden;
                                    line-height: 1.5;">{{ i.description }}</p>
                        <a href="#" class="btn" style="margin-top: 10px;
                               display: inline-block;
                               background:#333;
                               color:#fff;
                               font-size: 17px;
                               border-radius: 5px;
                               padding: 8px 25px;
                               box-shadow: 0 10px 15px rgba(0,0,0,.3);
                               transform: scale(1.03);"
                           >
                            read more
                        </a>



                    </div>
                {% endfor %}
            </div>
        </div>
    </div>



    </body>
{% endblock %}