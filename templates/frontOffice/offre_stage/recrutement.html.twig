                <a class="navbar-brand" href="index.html"><h2>E-FlexBank</h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#top">Acceuil
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#actualite">Actualités</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#stage">Stages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#evenement">Évènements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Réclamations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Se connecter</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

{% block body %}
    <body class="body" style="background-image: url("{{ asset('images/images.jpg') }}") ">
    <img src="{{ asset('images/images.jpg') }}" />
    <div class="container">
        <div class="box-container">
            {% for i in offres %}
                <div class="box">
                    <img src="image/icon-1.png" alt="">
                    <h3>{{ i.title }}</h3>
                    <p class="p">{{ i.description }}</p>
                    <a href="#" class="btn">read more</a>
