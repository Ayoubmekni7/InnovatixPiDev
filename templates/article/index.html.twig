
{% extends 'base.html.twig' %}
{% block nompage %}Liste des articles{% endblock %}

        {% block body %}
        
<div class="content-body">

            <div class="container-fluid">

                <!-- row -->

                <div class="row">

                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Liste des Articles</h4>
                                <div class="mb-4">
                                    <a href="{{ path('app_article_new') }}" class="btn btn-outline-success btn-rounded fs-18">+ Nouvel Article</a>
                                    
                                </div>
                            </div>
                            
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-responsive-md">

                                        <thead>
                                            <tr>

                                               
                                                <th class="text-center"><strong>Titre</strong></th>
                                                <th class="text-center"><strong>Contenu</strong></th>
                                                <th class="text-center"><strong>Auteur</strong></th>
                                                <th class="text-center"><strong>Date publication</strong></th>
                                                <th class="text-center"><strong>Durée</strong></th>
                                                <th class="text-center"><strong>Statut</strong></th>
                                                <th class="text-center"><strong>Catégorie</strong></th>
                                                <th class="text-center"><strong>Actions</strong></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for article in articles %} 
                                            <tr>

                                              
                                                <td>
                                                    <div class="text-center"><span class="w-space-no">{{ article.titreArt }}</span></div>
                                                </td>
                                                <td class="text-center">{{ article.contenuArt }} </td>
                                                <td class="text-center">{{ article.auteurArt }}</td>
                                                <td class="text-center">{{ article.datePubArt ? article.datePubArt|date('Y-m-d H:i:s') : '' }}</td>
                                                <td>
                                                    <div class="text-center" class="text-center">{{ article.dureeArt }}</div>
                                                </td>
                                                <td class="text-center">{{ article.statutArt }} </td>
                                                <td class="text-center">{{ article.categArt }} </td>
                                                <td>
                                                    <div class="text-center">
                                                        <a href="{{ path('app_article_show') }}" class="btn btn-primary shadow btn-xs sharp me-1"><i class="bi bi-eye"> </i></a>
                                                    
                                                        <a href="{{ path('app_article_edit') }}" class="btn btn-primary shadow btn-xs sharp me-1"><i
                                                                class="fas fa-pencil-alt"></i></a>

                                                        <a href="{{ path('app_article_delete') }}" class="btn btn-danger shadow btn-xs sharp" onclick="return confirm('Are you sure you want to delete this item?'");><i
                                                                class="fa fa-trash"></i></a>
                                                    </div>
                                                </td>
                                            </tr>
                                            {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        {% endblock %}

