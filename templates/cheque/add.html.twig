<body class="body" >
<div class="container-fluid">
    <form class="form" >
        <h4 class="text-center">Demande de Chèque Bancaire</h4>
        <div class="mb-3">
            <label class="form-label">  {{ form_label(form.numeroCompte, 'numeroCompte', {'label_attr': {'class': 'form-label'}}) }} </label>
            <div > {{ form_widget(form.numeroCompte, {'attr': {'class': 'form-control', 'placeholder': 'numeroCompte'}}) }}</div>
            {{ form_errors(form.numeroCompte, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            <label class="form-label">  {{ form_label(form.NomBeneficiaire, 'nomBeneficiare', {'label_attr': {'class': 'form-label'}}) }} </label>
            <div > {{ form_widget(form.NomBeneficiaire, {'attr': {'class': 'form-control', 'placeholder': 'nomBeneficiaire'}}) }}</div>
            {{ form_errors(form.NomBeneficiaire, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            <label class="form-label" >  {{ form_label(form.titulaireCompte, 'titulaireCompte', {'label_attr': {'class': 'form-label'}}) }}</label>
            <div >   {{ form_widget(form.titulaireCompte, {'attr': {'class': 'form-control', 'placeholder': 'PrénumeroCompte'}}) }} </div>
            {{ form_errors(form.titulaireCompte, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3">
            <label class="form-label">  {{ form_label(form.Email, 'email', {'label_attr': {'class': 'form-label'}}) }}</label>
            <div>{{ form_widget(form.Email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}</div>
            {{ form_errors(form.Email, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div class="mb-3 mt-5">
            <label  class="form-label"> {{ form_label(form.telephone, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}</label>
            <div>{{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}</div>
            {{ form_errors(form.telephone, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>
        <div>
            <label class="form-label">  {{ form_label(form.Beneficiaire, 'Beneficiaire', {'label_attr': {'class': 'form-label'}}) }}</label>
            <div > {{ form_widget(form.Beneficiaire, {'attr': {'class': 'form-control'}}) }} </div>
            {{ form_errors(form.Beneficiaire, {'attr': {'class': 'form-text text-danger'}}) }}
            {#            {{ form_row(form._token) }}#}
        </div>
        <div class="mb-3">
            <label class="form-label" > {{ form_label(form.Montant, 'Montant', {'label_attr': {'class': 'form-label'}}) }}</label>
            <div >{{ form_widget(form.Montant, {'attr': {'class': 'form-control', 'placeholder': 'Montant'}}) }}</div>
            {{ form_errors(form.Montant, {'attr': {'class': 'form-text text-danger'}}) }}
        </div>


        <button type="submit" class="btn btn-success mt-5">Confirmer</button>
    </form>
</div>
</body>
