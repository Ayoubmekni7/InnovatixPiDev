{% extends 'base.html.twig' %}

{% block title %}Hello ChequeController!{% endblock %}

{% block body %}

    {% block nompage %}Cheque{% endblock %}


    <!--**********************************
        Content body start
    ***********************************-->
    <div class="content-body">
        <div class="container-fluid">

            <!-- row -->

            <div class="row">

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Liste des chèques </h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-responsive-md">
                                    <thead>
                                    <tr>

                                        <th><strong>N°de Compte</strong></th>
                                        <th><strong>Titulaire</strong></th>
                                        <th><strong>Cin</strong></th>
                                        <th><strong>Bénéficiaire</strong></th>
                                        <th><strong>Nom de Bénéficiare</strong></th>
                                        <th><strong>Montant a payer</strong></th>
                                        <th><strong>Numéro de téléphone</strong></th>
                                        <th><strong>Email</strong></th>
                                        <th><strong>Actions</strong></th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for i in cheques  %}
                                    <tr>

                                        <td><strong>{{ i.numeroCompte }}</strong></td>
                                        <td>
                                            <div class="d-flex align-items-center"> <span class="w-space-no">{{ i.titulaireCompte }}</span></div>
                                        </td>
                                        <td>{{ i.Cin}}
                                        <td>{{ i.Beneficiaire }}</td>
                                        <td>{{ i.NomBeneficiaire}} </td>
                                        <td>{{ i.Montant }}</td>
                                        <td>
                                            <div class="d-flex align-items-center">{{ i.telephone }}</div>
                                        </td>
                                        <td>{{i.Email}} </td>

                                        <td>

                                            <div class="d-flex">
                                                <a href="#" class="btn btn-primary shadow btn-xs sharp me-1"><i
                                                            class="bi bi-check-lg"></i></a>
                                                <a href="{{ path('deleteDemandeCheque',{'id':i.id}) }}" class="btn btn-danger shadow btn-xs sharp"><i
                                                            class="fa fa-trash"></i></a>
                                            </div>

                                            <!--<div class="d-flex">
                                                <a href="#" class="btn btn-primary shadow btn-xs sharp me-1"><i
                                                        class="fas fa-pencil-alt"></i></a>

                                                <a href="#" class="btn btn-danger shadow btn-xs sharp"><i
                                                        class="fa fa-trash"></i></a>

                                            </div>-->
                                        </td>

                                    </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!--**********************************
        Content body end
    ***********************************-->



{% endblock %}