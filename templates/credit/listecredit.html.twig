                                                <td><strong>{{credit.idclient}}</strong></td>
                                                <td>{{credit.montant}}</td>
                                                <td>{{credit.statusclient}}</td>
                                                <td>{{credit.mensualite}}</td>
                                                <td>{{ credit.datedebut|date('Y-m-d') }}</td>
												<td>{{credit.duree}}</td>
                                                <td>{{credit.taux}}</td>
                                                <td>{{credit.status}}</td>
                                                <td>{{credit.fraisretard}}</td>
                                                <td>
                                                    <div class="d-flex">
                                                        <button class="btn btn-success shadow btn-xs sharp me-1">Approuver</button>
                                                        <button class="btn btn-danger shadow btn-xs sharp">Rejeter</button>
                                                    </div>
                                                </td>
                                               <td>
   
                                                <div class="d-flex">
                                                    <div class="d-flex">
                                                        <button type="button" class="btn btn-primary shadow btn-xs sharp me-1">
                                                            <i class="bi bi-pencil"></i> <!-- Utilisation de l'icône de modification -->
                                                        </button>
                                                        <button type="button" class="btn btn-danger shadow btn-xs sharp">
                                                            <i class="fa fa-trash"></i> <!-- Garder l'icône de suppression -->
                                                        </button>
                                                    </div>
                                                    

</td>


                                            </tr>
                                        {% endfor %}
										
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
					
                </div>
            </div>
        </div>
    {% endblock %}