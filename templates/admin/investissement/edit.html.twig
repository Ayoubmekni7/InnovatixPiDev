{% extends 'baseadmin.html.twig' %}

{% block body %}
    {% block nompage %}Modifier Investissement{% endblock %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title text-center mb-4">Formulaire pour modifier un projet</h5>
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.nom, 'Nom du projet', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}, 'id': 'nomprojet'}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.montant, 'Montant', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.montant, {'attr': {'class': 'form-control'}, 'id': 'montant'}) }}
                            {{ form_errors(form.montant) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.dateInvestissement, 'Date d\'investissement', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.dateInvestissement, {'attr': {'class': 'form-control'}, 'id': 'dateInvestissement'}) }}
                            {{ form_errors(form.dateInvestissement) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}, 'id': 'descriptionprojet'}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.typeInvestissement, 'Type d\'investissement', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.typeInvestissement, {'attr': {'class': 'form-control'}, 'id': 'typeInvestissement'}) }}
                            {{ form_errors(form.typeInvestissement) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.duree, 'Dur√©e', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.duree, {'attr': {'class': 'form-control'}, 'id': 'duree'}) }}
                            {{ form_errors(form.duree) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.tauxRendement, 'Taux de rendement', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.tauxRendement, {'attr': {'class': 'form-control'}, 'id': 'tauxRendement'}) }}
                            {{ form_errors(form.tauxRendement) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.statut, {'attr': {'class': 'form-control'}, 'id': 'statut'}) }}
                            {{ form_errors(form.statut) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
